<UserControl x:Class="Projekt_Poig.View.Atrybuty_tabela"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt_Poig.View"
             xmlns:vm="clr-namespace:Projekt_Poig.ViewModel"
             xmlns:prop="clr-namespace:Projekt_Poig.Properties"
             xmlns:lang="clr-namespace:Projekt_Poig.Properties.Lang"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <vm:MainViewModel x:Key="mainViewModel"/>
    </UserControl.Resources>
    
    <Grid DataContext="{StaticResource mainViewModel}">
        <DataGrid x:Name="lista_atrybutów" 
                  Margin="5" 
                  SelectedItem="{Binding AtrybutVM.BiezacyAtrybut}" 
                  ItemsSource="{Binding AtrybutVM.Atrybut}" 
                  VerticalContentAlignment="Top" 
                  AutoGenerateColumns="False"
                  GridLinesVisibility="None"
                  IsReadOnly="True"
                  ScrollViewer.VerticalScrollBarVisibility="Visible" 
                  ScrollViewer.CanContentScroll="False" RenderTransformOrigin="0.491,0.49">
            <DataGrid.Columns>

                <DataGridTextColumn Width="44" Header="{x:Static lang:Lang.AT_idGame}" Binding="{Binding Id_gry}"/>
                <DataGridTextColumn Width="75" Header="{x:Static lang:Lang.AT_Attribute_1}" Binding="{Binding Single_Player}"/>
                <DataGridTextColumn Width="75" Header="{x:Static lang:Lang.AT_Attribute_2}" Binding="{Binding Multiplayer}"/>
                <DataGridTextColumn Width="75" Header="{x:Static lang:Lang.AT_Attribute_3}" Binding="{Binding FPS}"/>
                <DataGridTextColumn Width="75" Header="{x:Static lang:Lang.AT_Attribute_4}" Binding="{Binding Open_World}"/>
                <DataGridTextColumn Width="75" Header="{x:Static lang:Lang.AT_Attribute_5}" Binding="{Binding Fabularna}"/>
                <DataGridTextColumn Width="75" Header="{x:Static lang:Lang.AT_Attribute_6}" Binding="{Binding Strategia}"/>
                <DataGridTextColumn Width="75" Header="{x:Static lang:Lang.AT_Attribute_7}" Binding="{Binding RPG}"/>
                <DataGridTextColumn Width="75" Header="{x:Static lang:Lang.AT_Attribute_8}" Binding="{Binding RogueLike}"/>
                <DataGridTextColumn Width="75" Header="{x:Static lang:Lang.AT_Attribute_9}" Binding="{Binding Akcja}"/>
                <DataGridTextColumn Width="75" Header="{x:Static lang:Lang.AT_Attribute_10}" Binding="{Binding Puzzle}"/>
                <DataGridTextColumn Width="75" Header="{x:Static lang:Lang.AT_Attribute_11}" Binding="{Binding Symulacja}"/>
                <DataGridTextColumn Width="75" Header="{x:Static lang:Lang.AT_Attribute_12}" Binding="{Binding Horror}"/>
                <DataGridTextColumn Width="75" Header="{x:Static lang:Lang.AT_Attribute_13}" Binding="{Binding Przygodowa}"/>



            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
