<UserControl x:Class="Projekt_Poig.View.Atrybuty_tabela"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt_Poig.View"
             xmlns:vm="clr-namespace:Projekt_Poig.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <vm:MainViewModel x:Key="mainViewModel"/>
    </UserControl.Resources>
    
    <Grid DataContext="{StaticResource mainViewModel}">
        <DataGrid x:Name="lista_atrybutów" 
                  Margin="5" 
                  SelectedItem="{Binding AtrybutVM.BiezacyAtrybut}" 
                  ItemsSource="{Binding AtrybutVM.Atrybut}" 
                  VerticalContentAlignment="Top" 
                  AutoGenerateColumns="False"
                  GridLinesVisibility="None"
                  IsReadOnly="True"
                  ScrollViewer.VerticalScrollBarVisibility="Visible" 
                  ScrollViewer.CanContentScroll="False" RenderTransformOrigin="0.491,0.49">
            <DataGrid.Columns>
                <DataGridTextColumn Width="1*" Header="ID GRY" Binding="{Binding Id_gry}"/>
                <DataGridTextColumn Width="1*" Header="Singleplayer" Binding="{Binding Single_Player}"/>
                <DataGridTextColumn Width="1*" Header="Multiplayer" Binding="{Binding Multiplayer}"/>
                <DataGridTextColumn Width="1*" Header="FPS" Binding="{Binding FPS}"/>
                <DataGridTextColumn Width="1*" Header="Open World" Binding="{Binding Open_World}"/>
                <DataGridTextColumn Width="1*" Header="Fabularna" Binding="{Binding Fabularna}"/>
                <DataGridTextColumn Width="1*" Header="Strategia" Binding="{Binding Strategia}"/>
                <DataGridTextColumn Width="1*" Header="RPG" Binding="{Binding RPG}"/>
                <DataGridTextColumn Width="1*" Header="RogueLike" Binding="{Binding RogueLike}"/>
                <DataGridTextColumn Width="1*" Header="Akcja" Binding="{Binding Akcja}"/>
                <DataGridTextColumn Width="1*" Header="Puzzle" Binding="{Binding Puzzle}"/>
                <DataGridTextColumn Width="1*" Header="Symulacja" Binding="{Binding Symulacja}"/>
                <DataGridTextColumn Width="1*" Header="Horror" Binding="{Binding Horror}"/>
                <DataGridTextColumn Width="1*" Header="Przygodowa" Binding="{Binding Przygodowa}"/>


            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
