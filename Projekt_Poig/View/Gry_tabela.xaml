<UserControl x:Class="Projekt_Poig.View.Gry_tabela"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt_Poig.View"
             xmlns:vm="clr-namespace:Projekt_Poig.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <vm:MainViewModel x:Key="mainViewModel"/>
    </UserControl.Resources>

    <Grid DataContext="{StaticResource mainViewModel}">
        <DataGrid 
            x:Name="lista_gier" 
            Margin="10" 
            SelectedItem="{Binding GraVM.BiezacaGra}" 
            ItemsSource="{Binding GraVM.Gra}" 
            VerticalContentAlignment="Top"
            AutoGenerateColumns="False"
            GridLinesVisibility="None"
            IsReadOnly="True"
            ScrollViewer.VerticalScrollBarVisibility="Visible" 
            ScrollViewer.CanContentScroll="False">
            <DataGrid.Columns>
                <DataGridTextColumn Width="50" Header="ID GRY" Binding="{Binding Id_gry}"/>
                <DataGridTextColumn Width="400" Header="Nazwa gry" Binding="{Binding Nazwa_gry}"/>
                <DataGridTextColumn Width="50" Header="ID TYPU" Binding="{Binding Id_typu}"/>


            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
