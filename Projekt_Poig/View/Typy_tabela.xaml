<UserControl x:Class="Projekt_Poig.View.Typy_tabela"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt_Poig.View"
             xmlns:vm="clr-namespace:Projekt_Poig.ViewModel"
             xmlns:prop="clr-namespace:Projekt_Poig.Properties"
             xmlns:lang="clr-namespace:Projekt_Poig.Properties.Lang"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <vm:MainViewModel x:Key="mainViewModel"/>
    </UserControl.Resources>
    <Grid DataContext="{StaticResource mainViewModel}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Button Grid.Row="4" 
                    Command="{Binding TypVM.Dodaj}" 
                    Content="{x:Static lang:Lang.TT_Button}"/>
            
            <TextBox Grid.Row="0" Text="{Binding TypVM.Nazwa_gracza}"/>
            <TextBox Grid.Row="1" Text="{Binding TypVM.Opis}"/>
        </Grid>

        <Grid Grid.Column="1">
            <DataGrid x:Name="lista_gier" 
                  Margin="10" 
                  SelectedItem="{Binding TypVM.BiezacyTyp}" 
                  ItemsSource="{Binding TypVM.Typ}" 
                  VerticalContentAlignment="Top" 
                  AutoGenerateColumns="False"
                  GridLinesVisibility="None"
                  IsReadOnly="True"
                  ScrollViewer.VerticalScrollBarVisibility="Visible" 
                  ScrollViewer.CanContentScroll="False">

                <DataGrid.Columns>
                    
                    <DataGridTextColumn Width="50" 
                                        Header="{x:Static lang:Lang.TT_idGame}" 
                                        Binding="{Binding Id_typu}"/>
                    
                    <DataGridTextColumn Width="100" 
                                        Header="{x:Static lang:Lang.TT_Player}" 
                                        Binding="{Binding Nazwa_gracza}"/>
                    
                    <DataGridTextColumn Width="*" 
                                        Header="{x:Static lang:Lang.TT_Description}" 
                                        Binding="{Binding Opis}"/>


                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>